{
    "name": "vherus/php-framework",
    "description": "Custom bootstrap framework for HTTP, API and Console based PHP applications.",
    "license": "proprietary",
    "authors": [
        {
            "name": "Nathan King",
            "role": "Developer"
        }
    ],
    "require": {
        "nikic/fast-route": "^1.0",
        "zendframework/zend-diactoros": "^1.3",
        "zendframework/zend-stratigility": "^2.0",
        "symfony/var-dumper": "^3.2",
        "php-di/php-di": "^5.4",
        "illuminate/database": "^5.3",
        "adamnicholson/bag": "dev-master",
        "doctrine/dbal": "^2.5",
        "symfony/console": "^3.2",
        "doctrine/migrations": "^1.5",
        "josegonzalez/dotenv": "^3.0",
        "roave/security-advisories": "dev-master",
        "moneyphp/money": "^3.1.3",
        "monolog/monolog": "^1.22",
        "http-interop/http-middleware": "^0.4.1",
        "psr7-sessions/storageless": "dev-master",
        "guzzlehttp/psr7": "^1.4",
        "ramsey/uuid": "^3.7",
        "cakephp/chronos": "^1.1",
        "vherus/depot": "^1.0"
    },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-4": {
            "Vherus\\": ["tests/app/", "src/app/"]
        }
    },
    "require-dev": {
        "guzzlehttp/guzzle": "~5.1",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "andrewcarteruk/cryptokey": "dev-master"
    }
}
